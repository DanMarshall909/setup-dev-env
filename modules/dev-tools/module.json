{
  "name": "dev-tools",
  "description": "Modern command-line development tools (ripgrep, fd, bat, fzf, etc.)",
  "version": "2.0.0",
  "category": "tool",
  "tags": ["dev-tools", "utilities", "cli", "productivity", "search"],
  "dependencies": [],
  "conflicts": [],
  "provides": ["ripgrep", "fd", "bat", "fzf", "tldr", "ncdu", "httpie", "duf", "jless", "yq"],
  "platforms": ["ubuntu", "debian", "pop-os"],
  "min_os_version": "18.04",
  "check_installed": "command -v rg >/dev/null || command -v fd >/dev/null || command -v bat >/dev/null",
  "get_version": "echo '2.0.0'",
  "size_estimate": "~100MB",
  "install_time_estimate": "3-5 minutes",
  "post_install_actions": [
    "Configure bat themes and syntax highlighting",
    "Set up fzf shell integration",
    "Update tldr cache",
    "Configure ripgrep defaults"
  ],
  "documentation": {
    "homepage": "https://github.com/sharkdp/bat",
    "docs": "https://github.com/BurntSushi/ripgrep/blob/master/GUIDE.md",
    "config_files": [
      "~/.config/bat/config",
      "~/.config/ripgrep/config",
      "~/.fzf.bash"
    ]
  }
}