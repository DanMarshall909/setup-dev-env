{
  "name": "docker",
  "description": "Container platform for development and deployment",
  "version": "2.0.0",
  "category": "containerization",
  "tags": ["docker", "containers", "docker-compose", "containerization", "devops"],
  "dependencies": [],
  "conflicts": [],
  "provides": ["docker", "docker-compose"],
  "platforms": ["ubuntu", "debian", "pop-os"],
  "min_os_version": "18.04",
  "check_installed": "command -v docker >/dev/null && docker version >/dev/null 2>&1",
  "get_version": "docker --version 2>/dev/null | grep -oP 'Docker version \\K[0-9.]+' || echo 'unknown'",
  "size_estimate": "~500MB",
  "install_time_estimate": "3-5 minutes",
  "post_install_actions": [
    "Log out and back in for group changes",
    "Test Docker with: docker run hello-world",
    "Enable Docker service to start on boot",
    "Configure Docker daemon settings if needed"
  ],
  "documentation": {
    "homepage": "https://www.docker.com/",
    "docs": "https://docs.docker.com/",
    "config_files": [
      "/etc/docker/daemon.json",
      "~/.docker/config.json"
    ]
  }
}